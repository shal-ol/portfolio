.nav{
    display: flex;
    flex-direction: row;
    color: white;
    text-decoration: none;
    font-size: 16px;

    &__list{
        display: flex;
        flex-direction: row;
    }
    &__item{
        margin-right: 55px;
        &:last-child{
        margin-right: 0px;
        
        }
    }
    &__link{
        text-decoration: none;
        &:hover{
            color: #706a65;
        }
    }
    &--footer{
    margin-bottom: 3.75rem;
    }
}